{
  "name": "gitinfo",
  "description": "Gets information about a Git repository.",
  "keywords": [
    "github",
    "repository",
    "info"
  ],
  "version": "2.1.3",
  "main": "./dist/gitinfo.js",
  "author": {
    "name": "Gajus Kuizinas",
    "email": "gajus@gajus.com",
    "url": "http://gajus.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/gitinfo"
  },
  "license": "BSD-3-Clause",
  "scripts": {
    "build": "babel ./src --out-dir ./dist --copy-files",
    "test": "NODE_ENV=development mocha --compilers js:babel-register ./tests",
    "documentation": "documentation build ./src --format md --access public --output ./API.md && gitdown ./.README/README.md --output-file ./README.md",
    "lint": "eslint ./src ./tests"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^2.0.0",
    "babel-plugin-ramda": "^1.1.5",
    "babel-plugin-syntax-flow": "^6.13.0",
    "babel-plugin-transform-flow-strip-types": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-typecheck": "^3.9.0",
    "babel-preset-es2015-node4": "^2.1.0",
    "babel-register": "^6.11.6",
    "chai": "^3.5.0",
    "conventional-changelog-cli": "^1.2.0",
    "conventional-changelog-lint": "^1.0.1",
    "conventional-changelog-lint-config-canonical": "^1.0.0",
    "conventional-recommended-bump": "^0.3.0",
    "coveralls": "^2.11.12",
    "documentation": "^4.0.0-beta9",
    "eslint": "^3.3.1",
    "eslint-config-canonical": "^1.7.16",
    "flow-bin": "^0.31.1",
    "gitdown": "^2.4.10",
    "mocha": "^3.0.2",
    "nyc": "^8.1.0",
    "standard-version": "^2.4.0",
    "travis-after-all": "^1.4.4"
  },
  "dependencies": {
    "ini": "^1.3.4",
    "ramda": "^0.22.1"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "text-lcov"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
